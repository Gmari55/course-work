<Window x:Class="mail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mail"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Refresh" Click="refreshbtbclick"></MenuItem>
            </Menu>
            <StackPanel DockPanel.Dock="Left">
                <Button x:Name="SendBtn" Content="Send" HorizontalAlignment="Left" Height="34" Margin="10,26,0,0" VerticalAlignment="Top" Width="153" Click="SendBtnClick" FontSize="18"/>
                <ListBox  x:Name="ForldersListBox" SelectionChanged="folderlistselected"></ListBox>
            </StackPanel>
            <DockPanel DockPanel.Dock="Top" >

                <Button Padding="3" Content="&gt;" x:Name="nextbtn" DockPanel.Dock="Right" Click="nextbtn_Click"></Button>
                <Button Padding="3" Content="&lt;" x:Name="previousbtn" DockPanel.Dock="Right" Click="previousbtn_Click"></Button>
                <Button Content="Search"  x:Name="searchbtn" DockPanel.Dock="Right" Click="searchbtn_Click"></Button>
                <TextBox x:Name="SeachTxtBox" Margin="5">Search</TextBox>
            </DockPanel>
            <DataGrid 
                x:Name="dg" 
                MinRowHeight="30" 
                IsReadOnly="True" 
                ColumnWidth="*" 
                VerticalGridLinesBrush="White"
                RowHeaderWidth="0"
                ColumnHeaderHeight="0"
                MouseDoubleClick="readmessage">

                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Send message" Click="MenuItem_Click" />
                    </ContextMenu>
                </DataGrid.ContextMenu>

            </DataGrid>

        </DockPanel>


    </Grid>
</Window>
