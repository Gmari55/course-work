<Window x:Class="mail.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mail"
        mc:Ignorable="d"
        Title="MessageWindow" Height="450" Width="800">
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top"  FontSize="40" x:Name="Subject" >Subject:</TextBlock>
        <DockPanel DockPanel.Dock="Top">

            <DockPanel DockPanel.Dock="Left">
                <Label x:Name="From" DockPanel.Dock="Top" FontSize="14" Padding="2">From:</Label>
                <Label x:Name="To" DockPanel.Dock="Top" FontSize="14" Padding="2">To:</Label>
            </DockPanel>
            <DockPanel DockPanel.Dock="Right">
                <Label DockPanel.Dock="Top" x:Name="date">dgf</Label>
            </DockPanel>
            <DockPanel DockPanel.Dock="Top">
                <Button Click="replybtnclicl" DockPanel.Dock="Top" MaxHeight="20" MaxWidth="50"  >Reply</Button>
                <Button Click="forwardbtnclick"   DockPanel.Dock="Top" MaxHeight="20" MaxWidth="50" >Forward</Button>
            </DockPanel>
        </DockPanel>
        <TextBox x:Name="Text"></TextBox>
    </DockPanel>
</Window>
